									<children>
										<VBox alignment="CENTER">
											<padding>
												<Insets bottom="2"/>
											</padding>
											<children>
												<ImageView fitHeight="30" preserveRatio="true">
													<image>
														<Image url="@../image/dvp/config-icon.png"/>
