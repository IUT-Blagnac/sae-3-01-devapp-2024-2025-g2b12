						<HBox alignment="CENTER" HBox.hgrow="ALWAYS" spacing="20">
							<padding>
								<Insets left="20" right="20" top="20" bottom="20"/>
							</padding>
							<children>
								<VBox alignment="CENTER" HBox.hgrow="ALWAYS" styleClass="container">
									<children>
										<VBox VBox.vgrow="ALWAYS">
											<padding>
												<Insets left="20" right="20" top="20" bottom="20"/>
											</padding>
											<children>
												<Label text="Colonne 1" VBox.vgrow="ALWAYS" styleClass="container-header"/>
