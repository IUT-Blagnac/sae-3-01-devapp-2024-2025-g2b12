<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="application.view.ApplicationMainFrameViewController" prefHeight="500">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <ImageView fx:id="imageView" fitWidth="200" fitHeight="100" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../image/titre.png"/>
        </image>
    </ImageView>
    <Button text="Configuration" onAction="#doConfiguration" prefWidth="240" prefHeight="35" styleClass="SUPERB"/>
    <Button text="Tester la connexion" onAction="#doTesterConnexionMQTT" prefWidth="240" prefHeight="35" styleClass="SUPERB"/>
    <Button text="Visualiser" onAction="#doVisualiserDonnees" prefWidth="240" prefHeight="35" styleClass="SUPERB"/>
    <Button text="Quitter" onAction="#doQuitter" prefWidth="240" prefHeight="35" styleClass="SUPERB"/>
</VBox>